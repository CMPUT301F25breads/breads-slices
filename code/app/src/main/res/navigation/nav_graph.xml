<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/MyEventsFragment">

    <fragment
        android:id="@+id/MyEventsFragment"
        android:name="com.example.slices.fragments.MyEventsFragment"
        android:label="My Events"
        tools:layout="@layout/my_events_fragment">

    </fragment>
    <fragment
        android:id="@+id/BrowseFragment"
        android:name="com.example.slices.fragments.BrowseFragment"
        android:label="Browse Events"
        tools:layout="@layout/browse_fragment">

        <action
            android:id="@+id/action_BrowseFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/CreateFragment"
        android:name="com.example.slices.fragments.CreateFragment"
        android:label="Create Events"
        tools:layout="@layout/create_fragment">

    </fragment>
    <fragment
        android:id="@+id/NotifFragment"
        android:name="com.example.slices.fragments.NotifFragment"
        android:label="Notifications"
        tools:layout="@layout/notif_fragment"
        />
    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.example.slices.fragments.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/menu_fragment"
        />
    <fragment
        android:id="@+id/MyEventsOrgFragment"
        android:name="com.example.slices.fragments.MyEventsOrgFragment"
        android:label="My Events Organizer"
        tools:layout="@layout/my_events_org_fragment">

    </fragment>

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.slices.fragments.EventDetailsFragment"
        android:label="Event Details">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/action_to_MyEventsFragment"
        app:destination="@+id/MyEventsFragment"/>

    <action
        android:id="@+id/action_to_BrowseFragment"
        app:destination="@+id/BrowseFragment"/>

    <action
        android:id="@+id/action_to_NotifFragment"
        app:destination="@+id/NotifFragment"/>

    <action
        android:id="@+id/action_to_MenuFragment"
        app:destination="@+id/MenuFragment"/>
    <action
        android:id="@+id/action_to_CreateFragment"
        app:destination="@+id/CreateFragment"/>
    <action
        android:id="@+id/action_to_MyEventsOrgFragment"
        app:destination="@+id/MyEventsOrgFragment"/>

    <action
        android:id="@+id/action_global_EventDetailsFragment"
        app:destination="@id/eventDetailsFragment" />

</navigation>