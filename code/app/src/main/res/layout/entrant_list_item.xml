<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_entrant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textStyle="bold"
            android:text="Entrant Name" />

        <TextView
            android:id="@+id/tv_entrant_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="entrant@example.com" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_invited_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="Invited"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@drawable/card_background"
        android:padding="6dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_accepted_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="Accepted"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:background="@drawable/card_background"
        android:padding="6dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_cancel_entrant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="Remove"
        android:textSize="12sp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        style="?attr/materialButtonOutlinedStyle" />

</LinearLayout>
